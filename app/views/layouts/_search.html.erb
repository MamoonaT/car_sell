<div class="container-fluid w-75 h-100 mt-5 p-4 text-right border bg-light ">
	<h1>Find Cars</h1>
  <%= form_for :ad, url:home_search_path, method: 'get' do |f| %>
    <div class="container text-center">
      <div class="row">
        <div class="col">
					<%= f.label :city %><br>
					<%= f.select :city, options_for_select(Ad::CITY), {include_blank: true}%>
					<br>
        </div>
        <div class="col">
					<%= f.label :Milage %><br>
					<%= f.text_field :milage, placeholder: 'in km/h' %><br>
					<br>
        </div>
				<div class="col">
          <%= f.label :'Car_Make/Model' %><br>
          <%= f.select :car_make, options_for_select([['Honda', 'honda'],['Suzuki', 'suzuki'],['Toyota', 'toyata'],['Tesla', 'tesla']]), {include_blank: true} %>
          <br>
        </div>
      </div>
		</div>
		<% if filters %>
    <div class="container text-center">
      <div class="row">
        <div class="col">
          <%= f.label :Transmission_Type %><br>
          <%= f.select :transmission_type, options_for_select([['Automatic Manual', 'automatic manual'],['Manual', 'manual']]), {include_blank: true} %><br>
          <br>
        </div>
				<div class="col">
          <%= f.label :Price %><br>
          <%= f.text_field :price, placeholder: 'should be entered in PKR' %><br>
          <br>
        </div>
				<div class="col">
					<%= f.label :Engine_Type %><br>
					<%= f.select :engine_type, options_for_select([['Petrol', 'petrol'],['Diesel', 'diesel'], ['Hybrid','hybrid']]), {include_blank: true}%><br>
					<br>
				</div>
			</div>
		</div>
    <div class="container text-center">
      <div class="row">
        <div class="col">
          <%= f.label :Assembly_Type %><br>
					<%= f.select :assembly_type, options_for_select([['International', 'international'],['Local', 'local']]), {include_blank: true}%><br>
          <br>
        </div>
        <div class="col">		
					<%= f.label :Engine_Capacity %><br>
					<%= f.select :engine_capacity, options_for_select(Ad::ENGINE_CAPACITY), {include_blank: true} %>
				</div>
				<div class="col">		
					<%= f.label :Color %><br>
	      	<%= f.select :car_make, options_for_select(Ad::COLOR), {include_blank: true} %>
  		  	<br>
				</div>
			</div>
    </div>
		<% end %>
		<div class="container text-center">
			<div class="row align-items-start">
				<div class="col-sm">
					<div class="d-grid gap-2 d-md-flex mt-3 justify-content-md-start">
						<button class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown">
						<%= link_to "#{filters ?	 "Less Search Options" : "More Search Options"}", home_new_path(filters: !filters), remote: true %>
						</button>
						<div class="col-sm-11 mt-3">
							<%= f.submit "search" %>	
							<button type="button" class="border">CLEAR FILTER</button>
						</div>			
					</div>
				</div>
			</div>
		</div>
	<% end %> 		
</div>

