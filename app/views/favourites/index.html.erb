<%= render "layouts/header" if current_user.present? %>
<div class="container-fluid w-75 h-100 mt-5 p-5 text-right border bg-light ">
	<div class="container text-center">
		<h1> Your favourite Car </h1>
 		<div class="row">
			<% current_user.favourites.each do |favourite| %>
			<div class="col">
				<p> City </p>
				<%= favourite.ad.city %>
				<br>
			</div>
			<div class="col">
				<p>Car Make/Model </p>
				<%= favourite.ad.car_make %>
				<br>
			</div>
		</div>
		<div class="row">
			<div class="col">
				<p> Milage </p>
				<%= favourite.ad.milage %>
				<br>
			</div>
			<div class="col">
				<p>Engine_Type </p>
				<%= favourite.ad.engine_type%>
				<br>
			</div>
		</div>
		<div class="row">
			<div class="col">
				<p> Transmission_Type </p>
				<%= favourite.ad.transmission_type %>
				<br>
			</div>
			<div class="col">
				<p>Color </p>
				<%= favourite.ad.color%>
				<br>
			</div>
		</div>
		<div class="row">
			<div class="col">
				<p> Transmission_Type </p>
				<%= favourite.ad.transmission_type %>
				<br>
			</div>
			<div class="col">
				<p>Image:</p>
				<%= image_tag favourite.ad.images.first, style: "width: 300px;height: 200px" if  favourite.ad.images.attached? %>
				<br>
			</div>
		</div>    
		<div class="row">
			<div class="col">
				<p> Primary_Contact </p>
				<%=  favourite.ad.primary_contact %>
				<br>
			</div>
			<div class="col">
				<p>Secondary_Contact </p>
				<%= favourite.ad.secondary_contact%>
				<br>
			</div>
		<% end %>
	</div>
</div>
