<div class="container-fluid w-75 h-100 mt-5 p-5 text-right border bg-light ">
  <%= form_for @ad do |f| %>
    <div class="container text-center">
      <div class="row">
        <div class="col">
          <%= f.label :City %>
          <%= f.select(:city, options_for_select([['lahore'], ['Karachi']]), {include_blank: true})%>
          <br>
        </div>
        <div class="col">
            <%= f.label :Milage %>
            <%= f.text_field :milage %><br>
            <br>
          </div>
        </div>
      </div>
    <div class="container text-center">
      <div class="row">
        <div class="col">
          <%= f.label :Car_Make %>
          <%= f.text_field :car_make %>
          <br>
        </div>
        <div class="col">
          <%= f.label :Engine_Capacity %>
          <%= f.text_field :engine_capacity %><br>
          <br>
        </div>
      </div>
    </div>
    <div class="container text-center">
      <div class="row">
        <div class="col">
          <%= f.label :Price %>
          <%= f.text_field :price %><br>
          <br>
        </div>
      <div class="col">
        <%= f.label :Transmission_Type %>
        <%= f.text_field :transmission_type %><br>
        <br>
      </div>
    </div>
    <%= f.label :Add_description %><br>
    <%= f.text_field :add_description %><br>
    <br>
    <%= f.submit %>
  <% end %> 
</div>
