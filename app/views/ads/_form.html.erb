<div class="container-fluid w-75 h-100 mt-5 p-5 text-right border bg-light ">
	<div class="position-relative m-4">
		<div class="progress" style="height: 1px;">
			<div class="progress-bar" role="progressbar" aria-label="Progress" style="width: 50%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
		</div>
		<button type="button" class="position-absolute top-0 start-0 translate-middle btn btn-sm btn-primary rounded-pill" style="width: 2rem; height:2rem;">1</button>
		<button type="button" class="position-absolute top-0 start-50 translate-middle btn btn-sm btn-primary rounded-pill" style="width: 2rem; height:2rem;">2</button>
		<button type="button" class="position-absolute top-0 start-100 translate-middle btn btn-sm btn-secondary rounded-pill" style="width: 2rem; height:2rem;">3</button>
	</div>
	
  <%= form_for @ad do |f| %>
    <div class="container text-center">
      <div class="row">
        <div class="col">
          <%= f.label :City %>
          <%= f.select :city, options_for_select([['Lahore', 'lahore'],['Karachi', 'karachi'],['Islamabad', 'islamabad']]), {include_blank: true}%>
          <br>
        </div>
        <div class="col">
            <%= f.label :Milage %>
            <%= f.text_field :milage %><br>
            <br>
          </div>
        </div>
      </div>
    <div class="container text-center">
      <div class="row">
        <div class="col">
          <%= f.label :Car_Make %>
          <%= f.text_field :car_make %>
          <br>
        </div>
        <div class="col">
          <%= f.label :Engine_Capacity %>
          <%= f.text_field :engine_capacity %><br>
          <br>
        </div>
      </div>
    </div>
    <div class="container text-center">
      <div class="row">
        <div class="col">
          <%= f.label :Price %>
          <%= f.text_field :price %><br>
          <br>
        </div>
      <div class="col">
        <%= f.label :Transmission_Type %>
        <%= f.text_field :transmission_type %><br>
        <br>
      </div>
    </div>
    <%= f.label :Add_description %><br>
    <%= f.text_field :add_description %><br>
    <br>
    <%= f.submit %>
  <% end %> 
</div>
