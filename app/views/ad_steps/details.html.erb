<div class="container text-center">
  <%= render 'progress-bar'%>
  <div class="row">
    <div class="col">
      <%= form_for @ad, url: next_wizard_path, method: "PUT" do |f| %>
      <%= f.hidden_field :ad_id, value: params[:ad_id] %>
      <%= f.label :City %>
      <%= f.select :city, options_for_select(Ad::CITY) %>
    </div>
    <div class="col">
      <%= f.label :Milage %>
      <%= f.text_field :milage, placeholder: 'in km/h' %>
    </div>
  </div>
</div>
<div class="container text-center">
  <div class="row">
    <div class="col">
      <%= f.label :'Car_Make/Model' %>
      <%= f.select :car_make, options_for_select(Ad::CAR_MAKE) %>
      <br>
    </div>
    <div class="col">
      <%= f.label :Transmission_Type %>
      <%= f.select :transmission_type, options_for_select([['Automatic Manual', 'automatic manual'],['Manual', 'manual']]) %>
    </div>
  </div>
</div>
<div class="container text-center">
  <div class="row">
    <div class="col">
      <%= f.label :Price %>
      <%= f.text_field :price, placeholder: 'should be entered in PKR' %>
    </div>
    <div class="col">
      <%= f.label :Engine_Type %>
      <%= f.select :engine_type, options_for_select([['Petrol', 'petrol'],['Diesel', 'diesel'], ['Hybrid','hybrid']])%><br>
    </div>
  </div>
</div>
<div class="container text-center">
  <div class="row">
    <div class = col-6 >
      <%= f.label :Color %>
      <%= f.select :color, options_for_select(Ad::COLOR)%>
    </div>
    <div class = col-6 >    
      <%= f.label :Assembly_Type %>
      <%= f.select :assembly_type, options_for_select([['Local', 'local'],['International', 'international']])%>
    </div>
  <div class="container text-center">
    <div class="row">
      <div class = col-6 >
        <%= f.label :Engine_Capacity %>
        <%= f.text_field :engine_capacity %>
        </div>
    </div>
  </div> 
  <div class="container text-center">
    <div class="row">
      <div class = col-6 >
        <%= f.label :Add_Description %>
        <%= f.text_field :add_description, :size=>"50", :maxlength=>"254" %> 
        
      </div>
    </div>
  </div>   
    
    <%= f.submit "next" %>
    <% end %> 
    <form>
  </div>
</div>