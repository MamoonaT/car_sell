<%= render "layouts/header" if current_user.present? %>
<br>
<div class="container-fluid">
 <%= render 'progress-bar'%>
</div>
<div class="container-fluid w-75 h-100 mt-5 p-5 text-right border bg-light ">
	<%= form_for @ad, url: next_wizard_path, method: "PUT" do |f| %>
		<%= f.hidden_field :ad_id, value: @ad.id %>
			<div class="container text-center">
				<div class="row">
					<div class="col">
					<%= f.label :Primary_Contact %>
				   	<%= f.text_field :primary_contact,  placeholder: '+923xxxxxxxxx', class: "form-control #{'is-invalid' if 'invalid'}" %>
						<br>
					</div>
				</div>
			</div>
			<div class="container text-center">
				<div class="row">
					<div class="col">
					<%= f.label :Secondary_Contact %>
				   	<%= f.text_field :secondary_contact,  placeholder: '+923xxxxxxxxx', class: "form-control #{'is-invalid' if 'invalid'}" %>
						<br>
					</div>
				</div>
			</div>
		<%= f.submit "Create" %>
		<%= link_to "Back", previous_wizard_path %>
	<% end %>
</div>