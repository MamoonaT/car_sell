<div class="container-fluid w-75 h-100 mt-5 p-5 text-right border bg-light ">
	<%= form_for @ad, url: wizard_path do |f| %>
			<div class="container text-center">
				<div class="row">
					<div class="col">
					<%= f.label :Primary_Contact %>
						<%= f.text_field :primary_contact, placeholder: '+923xxxxxxxxx' %>
						<br>
					</div>
				</div>
			</div>
			<div class="container text-center">
				<div class="row">
					<div class="col">
					<%= f.label :Secondary_Contact %>
						<%= f.text_field :secondary_contact, placeholder: '+923xxxxxxxxx' %>
						<br>
					</div>
				</div>
			</div>
		<%= link_to "Create", @ad %>
	<% end %>
</div>